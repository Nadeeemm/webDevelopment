<%- include("../partials/header") %>
    <%- include("../partials/navbar") %>

        <div class="container">
            <div class="row">
                <%- include("../partials/flash") %>
                    <div class="col-md-12 col-lg-6" style="margin: 20px auto">




                        <form class="needs-validation" action="/register" method="POST" novalidate>
                            <h1>Sign up</h1>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username: </label>
                                <input type="text" class="form-control" id="username" placeholder="Choose a username"
                                    name="username" required />
                                <div class="invalid-feedback">Cannot Leave empty</div>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Eamil: </label>
                                <input type="email" class="form-control" id="email" placeholder="Enter your Email"
                                    name="email" required />
                                <div class="invalid-feedback">Cannot Leave empty</div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password :</label>
                                <input type="password" class="form-control" id="password"
                                    placeholder="Choose a secure Password" name="password" required />
                                <div class="invalid-feedback">Cannot Leave empty</div>
                                
                            </div>
                            <div class="form-check mb-3">
                                <label class="form-check-label" for="flexCheckChecked">
                                    I agree to the terms of services
                                </label>
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked"
                                    required />
                                <div class="invalid-feedback">Please tick the checkbox</div>
                            </div>

                            <button type="submit" class="btn btn-success">Register</button>

                          

                            <a href="/login" class="btn btn-info">
                                Already Registered/Login
                            </a>

                        </form>
                    </div>
            </div>
        </div>

        <%- include("../partials/footer") %>