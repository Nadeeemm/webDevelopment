<%- include("../partials/header") %>
  <%- include("../partials/navbar") %>

    <main class="container ">

      <div class="row m-2">

        <div class="col-md-12 col-lg-6">

          <div class="card col-md-12 col-sm-12 " style="width: 24rem">
            <img src="<%=blog.img %>" class="card-img-top h-50 p-2" alt="..." />
            <div class="card-body">

              <h5 class="card-title text-center">
                <%=blog.name %>
              </h5>

              <h6 class="card-title">Author: <%=blog.author %>
              </h6>

              <p class="card-text p-1">
                <%=blog.desc %>
              </p>

              <a href="/blogs" class="btn btn-dark">Go Back</a>
             
              <a href="/blogs/<%= blog._id %>/edit " class="btn btn-success">Edit</a>

              <form style="display:inline-block" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>

              </form>
            </div>
          </div>
        </div>

        <!-- ======================= Reviews ============================  -->
        <div class="border col-md-12 col-lg-6">
          <h1>Leave a review</h1>


          <form class="needs-validation" novalidate action="/blogs/<%= blog._id %>/review" method="POST">
            <div class="mb-3">
              <label for="rating" class="form-label"> Rating(0-5):</label>
              <input type="range" name="rating" min="0" max="5" class="form-range" id="rating">

            </div class="mb-3">
            <label for="comment" class="form-label"> Comment:</label>

            <textarea class="form-control" name="comment" id="comment" cols="20" rows="3" required></textarea>
            <div class="invalid-feedback">
              Cannot Leave empty
            </div>
            <br />
            <button class="btn btn-primary">Submit</button>

          </form>

         
          <div class="mb-3 mt-3">
            <% for(let review of blog.reviews){ %>
              <div class="card mb-3">

                <div class="card-header">User:</div>
                <h6 class="card-title"> Rating: <%=review.rating%>
                </h6>
                <p class="card-text">Comment: <%=review.comment%>
                </p>

              </div>
          </div>

          <% } %>
        </div>



      </div>
      </div>
    </main>

    <%- include("../partials/footer") %>