<%- include("../partials/header") %> <%- include("../partials/navbar") %>

<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-6" style="margin: 20px auto">
      <form
        class="needs-validation"
        novalidate
        action="/blogs/<%= blog._id %>?_method=PATCH "
        method="POST"
      >
        <div class="mb-3">
          <label for="name" class="form-label">blogs:</label>
          <input
            type="text"
            class="form-control"
            id="name"
            placeholder="Enter blog's Name"
            name="blog[name]"
            value="<%= blog.name %> "
            required
          />
        </div>
        <div class="mb-3">
          <label for="img" class="form-label">Image URL:</label>
          <input
            required
            type="text"
            class="form-control"
            id="img"
            placeholder="Image URL"
            name="blog[img]"
            value="<%= blog.img %> "
          />
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Author: </label>
          <input
            type="text"
            class="form-control"
            id="price"
            required
            placeholder="Enter Author's Name"
            name="blog[price]"
            value="<%= blog.author %> "
          />
        </div>
        <div class="mb-3">
          <label for="desc" class="form-label">Description:</label>
          <textarea
            class="form-control"
            id="desc"
            cols="30"
            rows="10"
            name="blog[desc]"
            value="<%= blog.desc %> "
            required
          ></textarea>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>
